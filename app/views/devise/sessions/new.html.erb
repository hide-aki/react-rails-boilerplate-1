<div class="row justify-content-center login">
  <div class="col-md-6">
    <div class="card-group">
      <div class="card p-4">
        <div class="card-body">
          <h1>Login</h1>
          <!--<img src="<%#= asset_pack_path 'logo.png' %>" />-->
          <p class="text-muted">Sign In to your account</p>
          <%= react_component("timer/timer") %>
          <% flash.each do |key, value| %>
              <div class="flash <%= key %>"><%= value %></div>
          <% end %>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="icon-envelope"></i></span>
              </div>
              <%= f.email_field :email, class: 'form-control', required: true, placeholder: 'Your Email',
                                autofocus: true %>
            </div>
            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="icon-lock"></i></span>
              </div>
              <%= f.password_field :password, class:"form-control",
                                   placeholder:"password", required: true, autocomplete: "off" %>
            </div>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <div class="row">
              <div class="col-6">
                <%= f.button :submit, "Login", class: 'btn btn-primary px-4' %>
              </div>
              <div class="col-6 text-right">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'btn btn-link px-0' %>
                <% end -%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

