<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mx-4">
      <div class="card-body p-4">
        <h1>Register</h1>
        <p class="text-muted">Create your account</p>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name, class: "form-control",
                      placeholder: "", required: true %>
          <%= f.input :last_name, class: "form-control",
                      placeholder: "", required: true %>
          <%= f.input :phone_number, class: "form-control",
                      placeholder: "", required: true %>
          <%= f.input :email, class: 'form-control', required: true, placeholder: 'Your Email',
                      autofocus: true %>
          <%= f.input :password, class: "form-control",
                      placeholder: "", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), autocomplete: "off" %>
          <%= f.input :password_confirmation, class: "form-control",
                      placeholder: "", required: true, autocomplete: "off" %>
<%= render 'terms' %>

          <%= f.button :submit, "Create Account", class: "btn btn-block btn-success" %>
        <% end %>
      </div>
      <div class="card-footer p-4">
        <div class="row">
          <div class="col-6">
            <button class="btn btn-block btn-facebook" type="button">
              <span>facebook</span>
            </button>
          </div>
          <div class="col-6">
            <button class="btn btn-block btn-twitter" type="button">
              <span>twitter</span>
            </button>
          </div>
        </div>
      </div>
      <div class="card-footer p-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
