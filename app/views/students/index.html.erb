<p id="notice"><%= notice %></p>
  <div class="animated fadeIn">
        <div class="card">
          <div class="card-header">
            <i class="fa fa-align-justify"></i> Students
            <%= link_to 'New Student', new_student_path, class:  'btn btn-sm btn-primary pull-right'%>
          </div>
          <div class="card-body">
            <table class="table table-responsive-sm table-striped">
              <thead>
              <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @students.each do |student| %>
                <tr>
                  <td><%= student.name %></td>
                  <td><%= student.age %></td>
                  <td>
                    <%= link_to  student, class: 'btn btn-success' do %>
                      <i class="fa fa-search-plus "></i>
                    <% end %>

                    <%= link_to edit_student_path(student), class: 'btn btn-info' do %>
                      <i class="fa fa-edit "></i>
                    <% end %>

                    <%= link_to student, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
                      <i class="fa fa-trash-o "></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <%= paginate @students %>
          </div>
        </div>
  </div>