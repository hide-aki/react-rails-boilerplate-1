<div class="animated fadeIn">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-align-justify"></i> Consignments
      <%= link_to 'Create Consignment', new_consignment_path, class:  'btn btn-sm btn-primary pull-right'%>
    </div>
    <div class="card-body">
      <%= render 'search' %>
      <table class="table table-responsive-sm table-striped">
        <thead>
        <tr>
          <th>Merchant</th>
          <th>Plan</th>
          <th>Tracking Code</th>
          <th>Receiver name</th>
          <th>Receiver phone</th>
          <th>Delivered on</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @consignments.each do |consignment| %>
            <tr>
              <td><%= consignment.merchant.name %></td>
              <td><%= consignment.plan.present? ? consignment.plan.name : '' %></td>
              <td><%= consignment.tracking_code %></td>
              <td><%= consignment.receiver_name %></td>
              <td><%= consignment.receiver_phone %></td>
              <!--<td><%#= consignment.delivered_on.strftime("%B, %d, %Y") %></td>-->
              <td><%= consignment.delivered_on %></td>
              <td><%= consignment.status %></td>
              <td>
                <%= link_to consignment, class: 'btn btn-success' do %>
                    <i class="fa fa-search-plus "></i>
                <% end %>

                <%= link_to edit_consignment_path(consignment), class: 'btn btn-info' do %>
                    <i class="fa fa-edit "></i>
                <% end %>

                <%= link_to consignment, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash-o "></i>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @consignments %>
    </div>
  </div>
</div>


<%= @consignment %>