<%= simple_form_for(@plan) do |f| %>
    <%= f.error_notification %>

    <div class="card-body">

      <div class="form-group">
        <%= f.label :name, 'Plan Name' %>
        <%= f.input :name, label: false, placeholder: 'Name' %>
      </div>

      <div class="form-group">
        <%= f.label :cost, 'Plan Cost' %>
        <%= f.input :cost, label: false, placeholder: 'Cost' %>
      </div>

    </div>
    <div class="card-footer">
      <%= f.button :submit, class: 'btn btn-sm btn-primary' %>
    </div>
<% end %>