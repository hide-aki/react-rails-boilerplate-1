<div class="animated fadeIn">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-align-justify"></i> Plans
      <%= link_to 'Create Plan', new_plan_path, class:  'btn btn-sm btn-primary pull-right'%>
    </div>
    <div class="card-body">
      <table class="table table-responsive-sm table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.name %></td>
              <td><%= number_to_currency(plan.cost, :unit => "BDT ", :separator => ".", :delimiter => ",")  %></td>
              <td>
                <%= link_to plan, class: 'btn btn-success' do %>
                    <i class="fa fa-search-plus "></i>
                <% end %>

                <%= link_to edit_plan_path(plan), class: 'btn btn-info' do %>
                    <i class="fa fa-edit "></i>
                <% end %>

                <%= link_to plan, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash-o "></i>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @plans %>
    </div>
  </div>
</div>

